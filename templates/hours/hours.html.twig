<div class="flex-container d-flex flex-row p-3" style="background-color: #FECCCC">
	<div class="d-flex flex-column">
		<h3 class="mt-3" style="font-weight: bolder">HORAIRES</h3>
		<svg viewbox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
			<line x1="0" y1="0" x2="50" y2="0" stroke="black"/>
		</svg>
	</div>

	{% for hour in hours %}

		<div class="d-flex flex-column p-4">
			<p>{{ hour.day|upper }}</p>
			<p class="m-t-5">{{ hour.startHour }}-{{ hour.endHour }}</p>
		</div>

	{% endfor %}
</div>
