<div class="flex-container d-flex flex-column flex-lg-row p-3" style="background-color: #FECCCC">

	<div class="d-flex flex-column">
		<h3 class="mt-3" style="font-weight: bolder">HORAIRES</h3>

	</div>

	{% for hour in hours %}
		<div class="d-flex flex-column p-4">
			<p>{{ hour.day|upper }}</p>
			<p class="m-t-5">{{ hour.startHour }}-{{ hour.endHour }}</p>
		</div>

	{% endfor %}
</div>
